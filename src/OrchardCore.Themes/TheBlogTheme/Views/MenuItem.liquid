<li {% if Model.HasItems %}class="dropdown"{% endif %}>
    {% shape_clear_alternates Model %}
    {% shape_type Model "MenuItemLink" %}
    {% shape_display Model %}
    {% if Model.HasItems %}
        <ul class="dropdown-menu">
            {% for item in Model.Items %}
                {% shape_display item %}
            {% endfor %}
        </ul>
    {% endif %}
</li>